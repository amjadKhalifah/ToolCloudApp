<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dashboard_background"
    android:orientation="vertical"
    >

    <!--Include Action Bar-->
    <include layout="@layout/actionbar_layout" />


    <TextView
        style="@style/prescanning_text"
        android:id="@+id/ParentObjectName"
        android:layout_marginLeft="10dp"/>


    <TextView
        style="@style/prescanning_text"
        android:id="@+id/ParentObjectType"
        android:layout_marginLeft="10dp"
        />


    <Button
        android:id="@+id/parent_scan_button"
        android:text="Scan Parent Object"
        style="@style/prescanning_button"
        android:layout_gravity="right"
        android:layout_marginRight="10dp" />




    <TextView
        style="@style/prescanning_text"
        android:id="@+id/ChildObjectName" />


    <TextView
        style="@style/prescanning_text"
        android:id="@+id/ChildObjectType"

        />


    <Button
        android:id="@+id/child_scan_button"
        android:text="@string/scan_child"
        style="@style/prescanning_button"
        android:layout_gravity="right"
        android:layout_marginRight="10dp" />



    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">



        <Button
            android:text="@string/capture_event"
            android:id="@+id/capture_event"
            android:clickable="false"
            style="@style/prescanning_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/validationMessage"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</LinearLayout>
