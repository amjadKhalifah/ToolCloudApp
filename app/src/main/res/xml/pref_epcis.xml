<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <EditTextPreference
        android:key="epcis_IP"
        android:title="@string/pref_title_epcis_ip"
        android:defaultValue="@string/pref_title_epcis_ip_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="epcis_port"
        android:title="@string/pref_title_epcis_port"
        android:defaultValue="@string/pref_title_epcis_port_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="epcis_user"
        android:title="@string/pref_title_epcis_user"
        android:defaultValue="@string/pref_title_epcis_user_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="epcis_password"
        android:title="@string/pref_title_epcis_password"
        android:defaultValue="@string/pref_title_epcis_password_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="epcis_path"
        android:title="@string/pref_title_epcis_path"
        android:defaultValue="@string/pref_title_epcis_path_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
