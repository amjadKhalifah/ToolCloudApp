<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="server_IP"
        android:title="@string/pref_title_server_ip"
        android:defaultValue="@string/pref_title_server_ip_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="server_port"
        android:title="@string/pref_title_server_port"
        android:defaultValue="@string/pref_title_server_port_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
    <EditTextPreference
        android:key="server_path"
        android:title="@string/pref_title_server_path"
        android:defaultValue="@string/pref_title_server_path_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />



</PreferenceScreen>
